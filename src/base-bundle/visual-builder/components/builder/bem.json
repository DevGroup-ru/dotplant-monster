{
  "block": "monster-visual-builder",
  "content": [
    {
      "elem": "top-pane",
      "content": [
        {
          "block": "resolution-switcher",
          "content": [
            {
              "elem": "resolution-link",
              "mods": ["active"],
              "content": "100%",
              "tag": "a",
              "attrs": {
                "data-resolution-width": "100%"
              }
            },
            {
              "elem": "resolution-link",
              "content": "dw",
              "tag": "a",
              "attrs": {
                "data-resolution-width": "83.9375em",
                "title": "desktop-wide"
              }
            },
            {
              "elem": "resolution-link",
              "content": "d",
              "tag": "a",
              "attrs": {
                "data-resolution-width": "74.9375em",
                "title": "desktop"
              }
            },
            {
              "elem": "resolution-link",
              "content": "t",
              "tag": "a",
              "attrs": {
                "data-resolution-width": "59.9375em",
                "title": "tablet"
              }
            },
            {
              "elem": "resolution-link",
              "content": "m",
              "tag": "a",
              "attrs": {
                "data-resolution-width": "39.9375em",
                "title": "mobile"
              }
            }
          ]
        },
        {
          "block": "edit-mode",
          "content": [
            {
              "elem": "label",
              "tag": "label",
              "content": "Edit mode:"
            },
            {
              "block": "radio-group",
              "mods": {
                "size": "s",
                "type": "button"
              },
              "val": "content",
              "options": [
                {
                  "val": "content",
                  "text": "Content"
                },
                {
                  "val": "template",
                  "text": "Template"
                },
                {
                  "val": "layout",
                  "text": "Layout"
                }
              ]
            }
          ]
        },
        {
          "block": "controls",
          "content": [
            {
              "elem": "refresh",
              "button": true,
              "content": [
                "<i class=\"fa fa-refresh\"></i>"
              ]
            },
            {
              "elem": "save",
              "button": true,
              "content": "<i class=\"fa fa-floppy-o\"></i>"
            }
          ]
        }
      ]
    },
    {
      "elem": "left-pane",
      "content": [
        {
          "block": "monster-stackable-container",
          "content": "Stackable here"
        },
        {
          "block": "monster-environment-selector",
          "recursive": "environments",
          "itemTemplate": {
            "elem": "environment-link",
            "tag": "a",
            "content": "<?= $item['icon'] ?>",
            "attrs": {
              "href": "#",
              "data-environment-name": {
                "unsafe": "<?= $item['environment'] ?>"
              }
            }
          }
        }
      ]
    },
    {
      "block": "monster-visual-frame",
      "tag": "iframe",
      "attrs": {
        "src": {
          "unsafe": "<?=Html::encode($data['url'])?>"
        }
      }
    }
  ]
}
