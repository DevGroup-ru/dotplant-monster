{
  "container": true,
  "content": {
    "block": "content-block-001",
    "row": true,
    "utils": [
      "one-line--top-bottom"
    ],
    "content": [
      {
        "elem": "title",
        "utils": [
          "no-margin--top"
        ],
        "content": "Наши преимущества",
        "editable": true
      },
      {
        "recursive": "$data[\"blocks\"]",
        "itemTemplate": {
          "elem": "nested",
          "content": [
            {
              "elem": "icon",
              "icon": true
            },
            {
              "elem": "title-nested",
              "content": "<?=$item['name']?>",
              "link": true
            },
            {
              "elem": "text",
              "content": "<?=$item['content']?>",
              "editable": "wysiwyg"
            }
          ]
        }
      }
    ]
  }
}
