{
  "container": true,
  "content": {
    "block": "content-block-003",
    "row": true,
    "utils": [
      "one-line--top-bottom",
      "text--center"
    ],
    "content": [
      {
        "elem": "title",
        "utils": [
          "no-margin--top"
        ],
        "content": "Наши преимущества",
        "editable": true
      },
      {
        "recursive": "$data[\"blocks\"]",
        "itemTemplate": {
          "elem": "nested",
          "content": [
            {
              "elem": "img",
              "html": "<img src='http://lorempixel.com/200/300/cats' />"
            },
            {
              "elem": "text-wrap",
              "content": [
                {
                  "elem": "title-nested",
                  "content": "<?=$item['name']?>",
                  "link": true
                },
                {
                  "elem": "text",
                  "content": "<?=$item['content']?>",
                  "editable": "wysiwyg"
                }
              ]
            }
          ]
        }
      }
    ]
  }
}
